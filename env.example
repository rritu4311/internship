# OnlyInternship.in Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# APP CONFIGURATION
# =============================================================================

# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-here-change-this-in-production

# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Atlas (Recommended for production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/onlyinternship?retryWrites=true&w=majority

# Supabase (Alternative)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# PostgreSQL (Alternative)
DATABASE_URL=postgresql://username:password@localhost:5432/onlyinternship

# =============================================================================
# AUTHENTICATION PROVIDERS
# =============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_ID=your-github-client-id
GITHUB_SECRET=your-github-client-secret

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# =============================================================================
# FILE STORAGE
# =============================================================================

# AWS S3 (Recommended for production)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
AWS_S3_ENDPOINT=https://s3.amazonaws.com

# Supabase Storage (Alternative)
SUPABASE_STORAGE_URL=https://your-project.supabase.co/storage/v1

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@onlyinternship.in

# Resend (Alternative)
RESEND_API_KEY=your-resend-api-key

# SMTP (Alternative)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Razorpay (For Indian payments)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Sentry (Error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# OpenAI (For AI features)
OPENAI_API_KEY=your-openai-api-key

# Cloudinary (Image optimization)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Environment
NODE_ENV=development
VERCEL_ENV=development

# Testing
JEST_WORKERS=1
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/onlyinternship_test

# =============================================================================
# SECURITY
# =============================================================================

# JWT Secret (for custom JWT tokens)
JWT_SECRET=your-jwt-secret-key

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# CORS
CORS_ORIGIN=http://localhost:3000,https://onlyinternship.in

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_VIDEO_INTERVIEWS=false
NEXT_PUBLIC_ENABLE_AI_MATCHING=true

# =============================================================================
# DEPLOYMENT
# =============================================================================

# Vercel
VERCEL_PROJECT_ID=your-vercel-project-id
VERCEL_ORG_ID=your-vercel-org-id

# Custom Domain
NEXT_PUBLIC_DOMAIN=onlyinternship.in

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit .env.local to version control
# 2. Use different keys for development and production
# 3. Rotate secrets regularly
# 4. Use strong, unique passwords for all services
# 5. Enable 2FA on all accounts
# 6. Monitor API usage and costs
